APP_NAME=KiroCLI Platform
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=change-me-to-a-random-secret-key-at-least-32-chars

DATABASE_URL=sqlite:///./data.db

SAML_IDP_ENTITY_ID=
SAML_IDP_SSO_URL=
SAML_IDP_X509_CERT=
SAML_SP_ENTITY_ID=
SAML_SP_ACS_URL=

IAM_IDENTITY_STORE_ID=
AWS_REGION=us-east-1

GOTTY_PRIMARY_PORT=7860
GOTTY_PORT_START=7861
GOTTY_PORT_END=7960
GOTTY_CERT_PATH=
GOTTY_KEY_PATH=
GOTTY_PATH=/usr/local/bin/gotty
KIRO_CLI_PATH=kiro-cli
GOTTY_REMOTE_MODE=false
GOTTY_REMOTE_HOST=

SSH_HOST=
SSH_PORT=22
SSH_USER=ubuntu
SSH_KEY_PATH=
SSH_REMOTE_HOME=/home/ubuntu

CORS_ORIGINS=["http://localhost:5173","http://localhost:3000","http://127.0.0.1:5173","http://127.0.0.1:3000"]

DOMAIN=

LOG_LEVEL=INFO
LOG_FILE=/var/log/kirocli-platform/backend.log

JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=8

SESSION_IDLE_TIMEOUT_MINUTES=30
SESSION_CLEANUP_INTERVAL_MINUTES=5

# ─── AWS Secrets Manager ──────────────────────────────────────────────────────
# 建议将以下敏感配置迁移到 AWS Secrets Manager，以下为本地开发回退值
# SECRET_KEY 建议迁移到 Secrets Manager（JSON key: "SECRET_KEY"）
# SAML_IDP_X509_CERT 建议迁移到 Secrets Manager（JSON key: "SAML_IDP_X509_CERT"）
# SAML_SP_PRIVATE_KEY 建议迁移到 Secrets Manager（JSON key: "SAML_SP_PRIVATE_KEY"）
SAML_SP_PRIVATE_KEY=

SECRETS_MANAGER_ENABLED=false
SECRETS_MANAGER_SECRET_NAME=kirocli-platform/development
SECRETS_MANAGER_FALLBACK_TO_ENV=true
